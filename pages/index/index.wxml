<!--pages/index/index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">VPT 初诊数据收集系统</text>
    <text class="subtitle">医学研究数据采集助手</text>
  </view>

  <view class="card">
    <text class="section-title">快速操作</text>

    <view class="action-list">
      <view class="action-item" bindtap="goToPatient">
        <view class="action-icon">👤</view>
        <view class="action-content">
          <text class="action-title">新增患者</text>
          <text class="action-desc">录入患者基本信息</text>
        </view>
        <text class="action-arrow">›</text>
      </view>

      <view class="action-item" bindtap="goToList">
        <view class="action-icon">📋</view>
        <view class="action-content">
          <text class="action-title">患者列表</text>
          <text class="action-desc">查看和管理所有患者</text>
        </view>
        <text class="action-arrow">›</text>
      </view>

      <view class="action-item" bindtap="goToExport">
        <view class="action-icon">📊</view>
        <view class="action-content">
          <text class="action-title">数据导出</text>
          <text class="action-desc">导出 CSV 格式数据</text>
        </view>
        <text class="action-arrow">›</text>
      </view>
    </view>
  </view>

  <view class="card">
    <text class="section-title">数据统计</text>
    <view class="stats-grid">
      <view class="stat-item">
        <text class="stat-value">{{stats.totalPatients}}</text>
        <text class="stat-label">患者总数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{stats.todayPatients}}</text>
        <text class="stat-label">今日新增</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{stats.completed}}</text>
        <text class="stat-label">完成数据</text>
      </view>
    </view>
  </view>

  <view class="card tips">
    <text class="tips-title">使用提示</text>
    <text class="tips-text">• 点击"新增患者"开始录入数据</text>
    <text class="tips-text">• 数据将实时保存到云端</text>
    <text class="tips-text">• 支持图片上传和批量导出</text>
  </view>
</view>
