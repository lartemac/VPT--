/* pages/export/export.wxss */

.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

/* 导出列表 */
.export-list {
  margin-top: 20rpx;
}

.export-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.export-item:last-child {
  border-bottom: none;
}

.export-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.export-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.export-desc {
  font-size: 24rpx;
  color: #999;
}

.export-btn {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  color: #1890ff;
  border: 1rpx solid #1890ff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

.export-btn.primary {
  background-color: #1890ff;
  color: #fff;
}

/* 导出说明 */
.tips-content {
  margin-top: 20rpx;
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  margin-bottom: 8rpx;
}

/* 导出历史 */
.history-list {
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-time {
  flex: 1;
  font-size: 26rpx;
  color: #999;
}

.history-type {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.history-count {
  font-size: 26rpx;
  color: #52c41a;
  font-weight: 500;
}

.empty {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}
